<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >


	<com.example.administrator.rainmusic.weiget.SlideMenu
		android:id="@+id/slide_menu"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" >
		<include layout="@layout/fragment_main_left" />

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/bg_main"
			>

			<ListView
				android:id="@+id/listview"
				android:layout_width="match_parent"
				android:layout_height="500dp"/>


			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                >

				<Button
					android:id="@+id/skip"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_alignParentBottom="true"
					android:layout_alignParentLeft="true"
					android:background="@drawable/ic_action_music"
					/>

				<TextView
					android:id="@+id/music_name_bar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignLeft="@+id/music_artist_bar"
					android:layout_alignStart="@+id/music_artist_bar"
					android:layout_alignTop="@+id/skip"
					android:text="这是歌曲"
					/>

				<TextView
					android:id="@+id/music_artist_bar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:layout_marginLeft="13dp"
					android:layout_marginStart="13dp"
					android:layout_toEndOf="@+id/skip"
					android:layout_toRightOf="@+id/skip"
					android:text="这是歌手"
					/>

				<Button
					android:id="@+id/play_model"
					android:layout_width="30dp"
					android:layout_height="50dp"
					android:layout_alignParentBottom="true"
					android:layout_alignParentRight="true"
					android:background="@drawable/ic_play_sequence"
					/>

				<Button
					android:id="@+id/main_fm_btn_play"
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:layout_alignParentBottom="true"
					android:layout_marginEnd="11dp"
					android:layout_marginRight="11dp"
					android:layout_toLeftOf="@+id/main_fm_btn_next"
					android:layout_toStartOf="@+id/main_fm_btn_next"
					android:background="@drawable/btn_ctrl_pause"
					/>

                <Button
                    android:id="@+id/main_fm_btn_next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/play_model"
                    android:layout_toStartOf="@+id/play_model"
                    android:background="@drawable/desk_next"
                    />
			</RelativeLayout>
		</RelativeLayout>
	</com.example.administrator.rainmusic.weiget.SlideMenu>


</RelativeLayout>


  
