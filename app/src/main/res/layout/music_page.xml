<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.rainmusic.weiget.MusicPlayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_play_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView android:id="@+id/bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <com.example.administrator.rainmusic.weiget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="164dp"
        android:layout_height="164dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/discbg"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/fm_disc_bg" />

    <ImageView
        android:id="@+id/disc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/fm_play_disc" />

    <ImageView
        android:id="@+id/needle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:src="@drawable/fm_play_needle"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp"
        android:layout_alignBottom="@+id/avatar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="100dp" />

</com.example.administrator.rainmusic.weiget.MusicPlayView>